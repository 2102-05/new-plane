package plane;

import java.awt.image.BufferedImage;
import java.util.Random;

import javax.imageio.ImageIO;

public class Column {
	BufferedImage image;
	int x,y;
	int width,heigth;
	int gap;
	int distance;
  Random random = new Random();
	public Column(int n) throws Exception{ „ÄÅ
	image=ImageIO.read(getClass().getResource("/img/tornado.png"));
	width = image.getWidth();
	heigth = image.getHeight();
	gap = 144;
	distance = 245;
	x = 550+(n-1)*distance;
	y = random.nextInt(218)+132;
	} 
	public void step(){
	x--;
	if (x==-width/2) {
	x=distance*2-width/2;
	y=random.nextInt(218)+132;
	}
	}
	}
